use crate::runfile::*;
use crate::lexer::*;

grammar;

extern {
    type Location = usize;
    type Error = LexErr;

    enum Tok {
        "\n" => Tok::Newline,
        "#"  => Tok::Hash,
        "##" => Tok::DoubleHash,
        "#/" => Tok::HashSlash,
        ARGV => Tok::CommandPart(_),
        NAME => Tok::TargetName(_),
    }
}

pub RunFile: RunFile = {
    Targets
}

Targets: RunFile = {
    "##" "\n" <c:Commands> "#/" <mut t:Targets> => {
        if let Some(_) = t.global_target {
            panic!("Only 1 global target allowed in a runfile!");
        }
        t.global_target = Some(Target {
            name: "".to_owned(),
            commands: c,
        });
        t
    },
    "#" <n:NAME> "\n" <c:Commands> "#/" <mut t:Targets> => {
        t.targets.push(Target {
            name: n.target_name(),
            commands: c,
        });
        t
    },
    => RunFile {
        global_target: None,
        targets: vec![]
    }
}

