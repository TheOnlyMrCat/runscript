$# r
run args
run chain
run env
run redir
$|

$args r
echo Test 'basic command' "with textual" arguments
echo 'environment variables:' $HOME
echo 'globs:' ../src/*.rs
$|

$chain r
yes | head -n 2
$|

$env r
FOO='bar' echo $FOO
FOO='bar' printenv FOO
FOO='bar'
echo $FOO
printenv FOO
export FOO
printenv FOO
$|

$redir r
echo 'hello' >> /dev/null
cat < ../.gitignore
$|