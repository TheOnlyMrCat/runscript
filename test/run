[all:test]
run args
run chain
# run conditional
run default
run dir
run exit
run fn
run params
run recursive
run redir

[args]
echo Test 'basic command' "with textual" arguments
echo 'environment variables:' $HOME
echo 'globs:' ../src/*.rs

[chain]
yes | head -n 2

[conditional]
if test -f run; then
    echo 'test successful'
else 
    echo 'test failed'
fi

if test -f nonexistent; then
    echo 'test successful'
elif test -f also_nonexistent; then
    echo 'alt test successful'
fi

[default:build]
::default-phase build run
echo Build!

[default:run]
echo Run!

[dir]
cd subdir
cat file.txt

[exit]
run nonexistent-target 2>/dev/null || :

[fn]
foo () {
    echo 'Keywordless'
}
function bar (echo 'Subshell' $1)
function qux () {
    echo 'Braces' $2
    echo $@
}
foo
bar baz
qux quux corge grault

[params]
FOO='bar' echo ${FOO-No foo}
FOO='bar' printenv FOO
FOO='bar'
echo ${FOO-No foo}
printenv FOO || :
export FOO
printenv FOO
source source.sh
printenv ENV_VAR

[recursive]
run :alt
run -s source.sh

[recursive:alt]
echo 'Hello from :alt'

[redir]
echo 'hello' >> /dev/null
cat < ../.gitignore

cat << EOF
Heredoc
EOF