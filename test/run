[all:test]
run args
run chain
run params
run exit
run recursive
run redir

[args]
echo Test 'basic command' "with textual" arguments
echo 'environment variables:' $HOME
echo 'globs:' ../src/*.rs

[chain]
yes | head -n 2

[params]
FOO='bar' echo ${FOO-No foo}
FOO='bar' printenv FOO
FOO='bar'
echo ${FOO-No foo}
printenv FOO || :
export FOO
printenv FOO
source source.sh
printenv ENV_VAR

[exit]
run nonexistent-target 2>/dev/null || :

[recursive]
run :alt
run -s source.sh

[recursive:alt]
echo 'Hello from :alt'

[redir]
echo 'hello' >> /dev/null
cat < ../.gitignore

cat << EOF
Heredoc
EOF